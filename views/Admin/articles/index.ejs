<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h2>Artigos</h2>
        <hr>
        <a href="/admin/articles/new" class="btn btn-success">Criar Nova Artigo</a>
        <hr>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Category</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articlesFront.forEach(element => { %>
                    <tr>
                    <td><%= element.id %> </td>
                    <td><%= element.title %></td>
                    <td><%= element.slug %></td>
                    <td><%= element.category.title %></td>
                    <th>
                        <a href="/admin/articles/edit/<%= element.id %>" class="btn btn-warning">editar</a>
                        <form method="post" action="/articles/delete" style="display: inline;" onsubmit="coonfirmarDelecao(event, this)"> 
                            <input type="hidden" name="id" value="<%= element.id %>">
                            <button class="btn btn-danger">deletar</button>
                        </form>
                    </th>
                     </tr>
                <% }) %>
                    </tr>
            </tbody>

        </table>
    </div>


</body>

<%- include ('../../partials/footer.ejs') %>
<script>
    function coonfirmarDelecao(event,form){
        event.preventDefault();
        var decision = confirm ("Você quer deletar esse Artigo?");
        if (decision){
            form.submit();
        }

    }
</script>