<%- include ('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbarInit.ejs') %>

    <div class="container">
        <hr>
        
        </br>
        <% result.articleFront.rows.forEach(element => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= element.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= element.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
         
        <% }) %>

        <nav aria-label="Page navigation example" class="mt-3">
            <ul class="pagination">
                <% if (pageFront >=2 ) { %>
                    <li class="page-item"><a class="page-link" href="/articles/page/<%= pageFront -1 %>">Previous</a></li>
                <% } %>
              <li class="page-item"><a class="page-link" href="/articles/page/1">1</a></li>
              <li class="page-item"><a class="page-link" href="/articles/page/2 ">2</a></li>
              <li class="page-item"><a class="page-link" href="/articles/page/3">3</a></li>
              <% if (result.next) { %>
                <li class="page-item"><a class="page-link" href="/articles/page/<%= pageFront +1 %>">Next</a></li>
              <% } %>
            </ul>
          </nav>
    </div>
    
</body>

<%- include ('../../partials/footer.ejs') %>
